    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,  // 소스맵 활성화 (디버깅을 위한 원본 코드 연결)
            "skipFiles": ["<node_internals>/**"]  // Node.js 내부 파일을 스킵 (디버깅할 때 필요없는 파일을 제외)
        }
    ]
}



  